<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
	</startup>

	<system.serviceModel>
		<services>
			<service name="Spike.Providers.WCF.BookProviderService" behaviorConfiguration="basicAuthBehavior">
				<endpoint address="" binding="basicHttpBinding" contract="Spike.Providers.WCF.BookProviderService">
					<identity>
						<dns value="localhost" />
					</identity>
				</endpoint>
				<endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:8733/BookProviderService/" />
					</baseAddresses>
				</host>
			</service>
			<service name="Spike.Providers.WCF.IdentityResolverService">
				<endpoint address="" binding="basicHttpBinding" contract="Spike.Providers.WCF.IdentityResolverService">
					<identity>
						<dns value="localhost" />
					</identity>
				</endpoint>
				<endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:8733/IdentityResolverService/" />
					</baseAddresses>
				</host>
			</service>
		</services>
		<behaviors>
			<serviceBehaviors>
				<behavior>
					<serviceMetadata httpGetEnabled="True" httpsGetEnabled="True"/>
					<serviceDebug includeExceptionDetailInFaults="True" />
				</behavior>
				<behavior name="basicAuthBehavior">
					<serviceCredentials>
						<userNameAuthentication userNamePasswordValidationMode="Custom" customUserNamePasswordValidatorType="Spike.Security.Authentication.BasicAuth.MVC.BasicAuthentication,Spike.Security"/>
					</serviceCredentials>
					<serviceMetadata httpGetEnabled="True" httpsGetEnabled="True"/>
					<serviceDebug includeExceptionDetailInFaults="True" />
				</behavior>
			</serviceBehaviors>
		</behaviors>
	</system.serviceModel>

</configuration>